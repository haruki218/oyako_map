<h2 class="text-center mt-3">管理者ログイン</h2>

<div class="container d-flex justify-content-center">
  <div class="col-12 col-md-8 col-lg-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

      <div class="form-group">
        <%= f.label "Eメール", class: "control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "パスワード", class: "control-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label "ログインを記憶する", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="form-group text-center">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </div>
</div>
