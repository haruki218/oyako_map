<div class="container">
    <div class="row mt-3">
        <h1><%= @prefecture %>のマップ</h1>
    </div>
    <div class="row mt-3">
        <div id="map" class="prefecture-map"></div>
        <div id="prefecture-name"><%= @prefecture %></div>
    </div>
    <div class="row mt-3">
        <img src="/play_icon.png" alt="遊び場アイコン" class="map-icon">
        <span class="mr-4">遊び場</span>
        <img src="/nursing_room_icon.png" alt="授乳室アイコン" class="map-icon">
        <span class="mr-4">授乳室</span>
        <img src="/diaper_changing_icon.png" alt="おむつ替えアイコン" class="map-icon">
        <span>おむつ替えスペース</span>
    </div>
</div>

<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>
