<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h2>マイページ</h2>
            <div class="card mb-4">
                <div class="card-header">
                    <h4>ユーザー情報</h4>
                </div>
                <div class="card-body">
                    <p><strong>ニックネーム:</strong> <%= current_user.name %></p>
                    <p><strong>メールアドレス:</strong> <%= current_user.email %></p>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <%= link_to '編集する', edit_user_path(current_user), class: 'btn btn-primary' %>
                <%= link_to '投稿履歴一覧', user_posts_path(current_user), class: 'btn btn-secondary' %>
            </div>
        </div>
    </div>
</div>