<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2>マイページ</h2>
      <div class="card mb-4">
        <div class="card-header">
          <h4>ユーザー情報</h4>
        </div>
        <div class="card-body">
          <p><strong>ニックネーム:</strong> <%= current_user.name %></p>
          <p><strong>メールアドレス:</strong> <%= current_user.email %></p>
          <div class="d-flex justify-content-between">
            <%= link_to '編集する', edit_user_path(current_user), class: 'btn btn-success' %>
            <%= link_to '投稿履歴一覧', user_posts_path(current_user), class: 'btn btn-info' %>
          </div>
        </div>
      </div>

    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>最近の投稿</h3>
      <% if @post %>
        <div class="card mb-4">
          <div class="card-body">
            <p><strong>タイトル:</strong> <%= link_to @post.title, post_path(@post) %></p>
            <p><strong>住所:</strong> <%= @post.address %></p>
            <p><strong>投稿日:</strong> <%= @post.created_at.strftime('%Y-%m-%d') %></p>
          </div>
        </div>
      <% else %>
        <p>投稿がありません。</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3>最近のコメント</h3>
      <% if @comment %>
        <div class="card mb-4">
          <div class="card-body">
            <p><strong>コメント内容:</strong> <%= @comment.content.truncate(50) %></p>
            <p><strong>投稿先:</strong> <%= link_to @comment.post.title, post_path(@comment.post) %></p>
            <p><strong>投稿日:</strong> <%= @comment.created_at.strftime('%Y-%m-%d') %></p>
          </div>
        </div>
      <% else %>
        <p>コメントがありません。</p>
      <% end %>
    </div>
  </div>
</div>