<h2>設備の投稿</h2>

<%= form_with model: @post, url: posts_path, local: true do |f| %>
  <div class="form-group">
    <label>設備選択</label><br>
    <input type="radio" name="facility_type" value="nursing_room"> 授乳室<br>
    <input type="radio" name="facility_type" value="diaper_changing"> おむつ替え<br>
  </div>

    <div class="form-group">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, class: "form-control", required: true %>
    </div>

<div class="form-group">
  <label>オプション</label><br>
  <% Tag.all.each do |tag| %>
    <%= check_box_tag "post[tag_ids][]", tag.id, @post.tag_ids.include?(tag.id), id: "tag_#{tag.id}" %>
    <%= label_tag "tag_#{tag.id}", tag.name %><br>
  <% end %>
</div>

  <%= f.submit "投稿する", class: "btn btn-primary" %>
<% end %>