<h1>投稿一覧</h1>

<% if @posts.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>投稿者</th>
        <th>タグ</th>
        <th>投稿日</th>
        <th>詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.user.name %></td>
          <td>
            <% post.tags.each do |tag| %>
              <span class="badge badge-primary"><%= tag.name %></span>
            <% end %>
          </td>
          <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
          <td><%= link_to '詳細', post_path(post), class: 'btn btn-info' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>投稿がありません。</p>
<% end %>